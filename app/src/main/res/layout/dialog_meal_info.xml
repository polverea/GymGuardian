<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/lavender_gray">

        <!-- Meal Name -->
        <TextView
            android:id="@+id/mealNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Calories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fire_svgrepo_com"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/mealCaloriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories: 0 kcal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/measure_svgrepo_com"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/mealQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 0 g"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Carbs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bread_svgrepo_com"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/mealCarbsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbs: 0 g"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Protein -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/meat_food_eat_cooking_bbq_svgrepo_com"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/mealProteinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein: 0 g"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Fat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fat_svgrepo_com"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/mealFatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fat: 0 g"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Time Added -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:elevation="6dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/time_svgrepo_com"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/timeAddedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Added"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Nutri-Score -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:elevation="6dp"
            android:background="@drawable/rounded_background"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/nutriScoreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutri-Score: A"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
