<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/lavender_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="16dp">

        <include
            layout="@layout/date_navigation_bar" />

        <include
            layout="@layout/meal_section"
            android:id="@+id/breakfastSection" />

        <include
            layout="@layout/meal_section"
            android:id="@+id/lunchSection" />

        <include
            layout="@layout/meal_section"
            android:id="@+id/dinnerSection" />

        <include
            layout="@layout/meal_section"
            android:id="@+id/snacksSection" />
    </LinearLayout>
</ScrollView>
